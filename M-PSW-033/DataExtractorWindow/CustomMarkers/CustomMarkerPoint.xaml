<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Demo.WindowsPresentation.CustomMarkers.CustomMarkerPoint"
	Height="7" Width="7">
    <Grid>
        <Ellipse Name ="PointOfIntersection" Fill="Transparent" Stroke="Black" Height="7" Width="7" StrokeThickness="1" RenderTransformOrigin="0.5,0.5">
            <Ellipse.RenderTransform>
                <ScaleTransform ScaleX="1" ScaleY="1">
                </ScaleTransform>
            </Ellipse.RenderTransform>
        </Ellipse>
    </Grid>
</UserControl>